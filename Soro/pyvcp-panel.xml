<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
  <labelframe text="Spindle">
    <font>("Helvetica",24)</font>
    <relief>GROOVE</relief>         
    <bd>12</bd>
    <hbox>
      <relief>GROOVE</relief>         
      <bd>2</bd>
      <label>
	<text>"VFD power:"</text>
	<font>("Helvetica",20)</font>
      </label>
      <led>
        <halpin>"vfd_power"</halpin> 
        <size>20</size> 
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
      </led>
    </hbox>
    <label>
      <text>"Spindle Speed:"</text>
      <font>("Helvetica",20)</font>
    </label>
    <bar>
      <halpin>"spindle-speed"</halpin>
      <max_>24000</max_>
    </bar>
    <hbox>
      <relief>GROOVE</relief>         
      <bd>2</bd>
      <label>
	<text>"Spindle At Speed:"</text>
	<font>("Helvetica",20)</font>
      </label>
      <led>
        <halpin>"spindle-at-speed-led"</halpin> 
        <size>30</size> 
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
      </led>
    </hbox>
  </labelframe>

  <labelframe text="ToolSetter">
    <font>("Helvetica",24)</font>
    <relief>GROOVE</relief>         
    <bd>12</bd>
    <hbox>
      <button>
	<relief>RAISED</relief>
	<halpin>"ztouch"</halpin>
	<text>"Touch off Z"</text>
	<font>("Helvetica",20)</font>
      </button>
    </hbox>
  </labelframe>

  <labelframe text="Power">
    <font>("Helvetica",24)</font>
    <relief>GROOVE</relief>         
    <bd>12</bd>
    <vbox>
      <label>
	<text>"External devices:"</text>
	<font>("Helvetica",20)</font>
      </label>
      <checkbutton>
	<relief>RAISED</relief>
	<halpin>"cabinet_light"</halpin>
	<text>"Cabinet Light"</text>
	<font>("Helvetica",20)</font>
      </checkbutton>
      <checkbutton>
	<relief>RAISED</relief>
	<halpin>"enable_psu"</halpin>
	<text>"PSU enabled"</text>
	<initval>1</initval>
	<font>("Helvetica",20)</font>
      </checkbutton>
    </vbox>
  </labelframe>


  <labelframe text="unused relays">
    <font>("Helvetica",20)</font>
    <relief>GROOVE</relief>         
    <bd>12</bd>

    <vbox>
      <checkbutton>
	<relief>RAISED</relief>
	<halpin>"relay_04"</halpin>
	<text>"relay 04"</text>
	<font>("Helvetica",20)</font>
      </checkbutton>
      <checkbutton>
	<relief>RAISED</relief>
	<halpin>"relay_05"</halpin>
	<text>"relay 05"</text>
	<font>("Helvetica",20)</font>
      </checkbutton>
    </vbox>
  </labelframe>
  
</pyvcp>
